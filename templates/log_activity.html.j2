{% extends "base.html.j2" %}
{% block title %}Log Activity - CuraVie{% endblock %}

{% block content %}
<div class="container form-container">
    <div class="card form-card">
        <div class="form-header">
            <h2 data-translate-key="log_activity_title">Log Your Activity</h2>
            <p data-translate-key="log_activity_subtitle">Keep track of your physical activities to see your progress.</p>
        </div>
        
        <form method="POST" action="" novalidate>
            {{ form.hidden_tag() }}

            <div class="form-group">
                {{ form.activity_type.label(class="form-label", **{'data-translate-key': 'label_activity_type'}) }}
                {{ form.activity_type(class="form-input", placeholder="e.g., Walking, Manual Labor, Cycling", **{'data-translate-key': 'placeholder_activity_type'}) }}
                {% for e in form.activity_type.errors %}<div class="error">{{ e }}</div>{% endfor %}
            </div>

            <div class="form-group">
                {{ form.duration_minutes.label(class="form-label", **{'data-translate-key': 'label_duration_minutes'}) }}
                {{ form.duration_minutes(class="form-input", placeholder="e.g., 60", **{'data-translate-key': 'placeholder_duration'}) }}
                {% for e in form.duration_minutes.errors %}<div class="error">{{ e }}</div>{% endfor %}
            </div>

            <div class="form-group">
                {{ form.notes.label(class="form-label", **{'data-translate-key': 'label_notes'}) }}
                {{ form.notes(class="form-input", rows="3", placeholder="Any additional details about the activity...", **{'data-translate-key': 'placeholder_activity_notes'}) }}
                {% for e in form.notes.errors %}<div class="error">{{ e }}</div>{% endfor %}
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-full-width" data-translate-key="log_activity_submit_btn">Log Activity</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}