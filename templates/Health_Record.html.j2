{% extends "base.html.j2" %}
{% block title %}Add Health Record - CuraVie{% endblock %}

{% block content %}
<div class="container form-container">
    <div class="card form-card">
        <div class="form-header">
            <h2 data-translate-key="health_record_title">{{ page_title | default('Add a New Health Reading') }}</h2>
            <p data-translate-key="health_record_subtitle">Enter your latest health vitals below.</p>
        </div>

        <form method="POST" action="" novalidate>
            {{ form.hidden_tag() }}

            <div class="form-group">
                {{ form.record_date.label(class="form-label", **{'data-translate-key': 'label_height_cm'}) }}
                {{ form.record_date(class="form-input", placeholder="Enter Date", **{'data-translate-key': 'placeholder_height_cm'}) }}
                {% for e in form.record_date.errors %}<div class="error">{{ e }}</div>{% endfor %}
            </div>

            <div class="form-group">
                {{ form.height_cm.label(class="form-label", **{'data-translate-key': 'label_height_cm'}) }}
                {{ form.height_cm(class="form-input", placeholder="Enter height in cm", **{'data-translate-key': 'placeholder_height_cm'}) }}
                {% for e in form.height_cm.errors %}<div class="error">{{ e }}</div>{% endfor %}
            </div>

            <div class="form-group">
                {{ form.weight_kg.label(class="form-label", **{'data-translate-key': 'label_weight_kg'}) }}
                {{ form.weight_kg(class="form-input", placeholder="Enter weight in kg", **{'data-translate-key': 'placeholder_weight_kg'}) }}
                {% for e in form.weight_kg.errors %}<div class="error">{{ e }}</div>{% endfor %}
            </div>

            <div class="form-group">
                {{ form.blood_pressure_systolic.label(class="form-label", **{'data-translate-key': 'label_bp_systolic'}) }}
                {{ form.blood_pressure_systolic(class="form-input", placeholder="e.g., 120", **{'data-translate-key': 'placeholder_bp_systolic'}) }}
                {% for e in form.blood_pressure_systolic.errors %}<div class="error">{{ e }}</div>{% endfor %}
            </div>

            <div class="form-group">
                {{ form.blood_pressure_diastolic.label(class="form-label", **{'data-translate-key': 'label_bp_diastolic'}) }}
                {{ form.blood_pressure_diastolic(class="form-input", placeholder="e.g., 80", **{'data-translate-key': 'placeholder_bp_diastolic'}) }}
                {% for e in form.blood_pressure_diastolic.errors %}<div class="error">{{ e }}</div>{% endfor %}
            </div>

            <div class="form-group checkbox-multiselect">
                {{ form.chronic_diseases.label(class="form-label", **{'data-translate-key': 'label_chronic_diseases'}) }}
                {{ form.chronic_diseases(class="form-input", placeholder="Enter details of chronic disease (if any)", **{'data-translate-key': 'placeholder_any_chronic_disease'}) }}
                {% for e in form.chronic_diseases.errors %}<div class="error">{{ e }}</div>{% endfor %}
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-full-width" data-translate-key="health_record_submit_btn">Save Health Record</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}